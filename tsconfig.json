{
    "compilerOptions": {
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["esnext", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "resolveJsonModule": true,
      "rootDir": "src",
      "skipLibCheck": true,
      "strict": true,
      "target": "es5",
      "jsx": "react",
    },
    "include": ["src"],
    "ts-node": {
      "files": true
    }
  }